<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:centerColor="#a7a7a7" android:endColor="#777777" android:startColor="#777777"/>
            <!--<stroke android:width="1dp" android:color="#565656"/>-->
            <corners android:radius="8dp"/>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <!--<stroke android:width="1dip" android:color="#171717" />-->
            <solid android:color="#ffffff" />
            <corners android:radius="8dp"/>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!--<stroke android:width="1dip" android:color="@color/gray" />-->
            <solid android:color="#ffffff" />
            <corners android:radius="8dp"/>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
</selector>