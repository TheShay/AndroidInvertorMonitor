<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/paleDark" />
            <stroke android:width="2dp" android:color="@color/paleDark" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/white" android:centerColor="@color/separator_color" android:endColor="@color/white" android:angle="270" />
            <stroke android:width="2dp" android:color="@color/paleDark"/>
            <corners android:radius="11dp" />
        </shape>
    </item>
</selector>